	<mapped-statement name="getUserByName" result-map="result">
		<![CDATA[
		select id,
			username,
			password
			from user
			where username=#value#
		]]>
	</mapped-statement>
	<mapped-statement name="setNewUserInfo" >
		<![CDATA[
		INSERT INTO user (id, username, password, nickname) VALUES (#id#,#username#,#password#,#nickname#)
		]]>
	</mapped-statement>
	
